{
  "schemaVersion": 1,
  "id": "travelersbackpack",
  "version": "${version}",
  "custom": {
    "cardinal-components": [
      "travelersbackpack:travelersbackpack",
      "travelersbackpack:travelersbackpack_entity"
    ]
  },
  "accessWidener" : "travelersbackpack.accesswidener",

  "name": "Traveler's Backpack",
  "description": "Traveler's Backpack for Fabric!",
  "authors": [
    "Tiviacz1337"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/travelers-backpack-fabric",
    "sources": "https://github.com/Tiviacz1337/Travelers-Backpack",
    "issues": "https://github.com/Tiviacz1337/Travelers-Backpack/issues"
  },

  "license": "GPL v3",
  "icon": "assets/travelersbackpack/icon.png",

  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "com.tiviacz.travelersbackpack.datagen.ModDataGeneration"
    ],
    "main": [
      "com.tiviacz.travelersbackpack.TravelersBackpack"
    ],
    "client": [
      "com.tiviacz.travelersbackpack.TravelersBackpackClient"
    ],

    "rei_plugins": [
      "com.tiviacz.travelersbackpack.compat.rei.ReiCompat",
      "com.tiviacz.travelersbackpack.compat.rei.ReiClientCompat"
    ],

    "cardinal-components-entity": [
      "com.tiviacz.travelersbackpack.component.ComponentUtils"
    ]
  },
  "mixins": [
    "travelersbackpack.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16",
    "cardinal-components-base": "*",
    "cardinal-components-entity": "*",
    "cloth-config2": "*"
  },
  "suggests": {
    "modmenu": "*"
  }
}
